
:root {
   --page-width: {{> useProperty name="page_width" default="520px" }};
   --page-height: {{> useProperty name="page_height" default="calc(100% - 16pt - 58pt)" }};
   --page-top: {{> useProperty name="page_top" default="12pt" }};
   --page-bottom: {{> useProperty name="page_bottom" default="58pt" }};
   --page-shadow: {{> useProperty name="page_shadow" default="none" }};
   --page-justify: {{> useProperty name="page_justify" default="flex-start" }};
   --page-align: {{> useProperty name="page_align" default="center" }};
   --page-font-stack: {{> useProperty name="page_font_stack" default="Inter, Arial, Helvetica, sans-serif" }};

   --page-background-color: {{> useProperty name="page_background_color" default="#FFFFFF" }};
   --page-background-image: {{> useProperty name="page_background_image" default="none" }};
   --page-foreground-color: {{> useProperty name="page_foreground_color" default="#000000" }};

   --page-scroll-size: {{> useProperty name="page_scroll_size" default="6pt" }};
   --page-scroll-color: {{> useProperty name="page_scroll_color" default="auto" }};
   --page-scroll-active-color: {{> useProperty name="page_scroll_active_color" default="auto" }};

   --page-user-avatar-image-width: {{> useProperty name="page_user_avatar_image_width" default="71.4pt" }};
   --page-user-avatar-image-height: {{> useProperty name="page_user_avatar_image_height" default="71.4pt" }};
   --page-user-avatar-image-radius: {{> useProperty name="page_user_avatar_image_radius" default="50%" }};

   --page-social-icon-width: {{> useProperty name="page_social_icon_width" default="20pt" }};
   --page-social-icon-height: {{> useProperty name="page_social_icon_height" default="20pt" }};
   --page-social-icon-gap: {{> useProperty name="page_social_icon_gap" default="1pt" }};
   --page-social-icon-color: {{> useProperty name="page_social_icon_color" default="inherit" }};

   --page-link-gap: {{> useProperty name="page_link_gap" default="10pt" }};
   --page-link-width: {{> useProperty name="page_link_width" default="100%" }};
   --page-link-radius: {{> useProperty name="page_link_radius" default="5pt" }};
   --page-link-background-color: {{> useProperty name="page_link_background_color" default="transparent" }};
   --page-link-background-image: {{> useProperty name="page_link_background_image" default="none" }};
   --page-link-foreground-color: {{> useProperty name="page_link_foreground_color" default="inherit" }};
   --page-link-border: {{> useProperty name="page_link_border" default="1px solid #DDDDDD" }};
   --page-link-shadow: {{> useProperty name="page_link_shadow" default="0 8px 12px rgb(0 0 0 / 30%)" }};
}
